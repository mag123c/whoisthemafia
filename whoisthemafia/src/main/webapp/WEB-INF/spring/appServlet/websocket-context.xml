<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:websocket="http://www.springframework.org/schema/websocket"
	xsi:schemaLocation="http://www.springframework.org/schema/websocket http://www.springframework.org/schema/websocket/spring-websocket-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- 웹소켓 -->
	<bean id="lobbyHandler" class="com.solo.pj1.room.util.LobbyHandler" />
	<bean id="roomHandler" class="com.solo.pj1.room.util.RoomHandler" />        
	
	<websocket:handlers>
		<websocket:mapping handler="lobbyHandler" path="/lobby-ws"/>
		<websocket:mapping handler="roomHandler" path="/room-ws"/>		
		<websocket:handshake-interceptors>
			<bean class="org.springframework.web.socket.server.support.HttpSessionHandshakeInterceptor"/>
		</websocket:handshake-interceptors>
		<websocket:sockjs />
	</websocket:handlers>
	<!-- 웹소켓 끝 -->
</beans>
